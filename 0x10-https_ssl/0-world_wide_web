cript to display DNS information for subdomains

function get_subdomain_info() {
  local domain=$1
  local subdomain=$2
  local record_type
  local destination

  # Perform DNS lookup using dig and extract relevant information
  record_type=$(dig "$subdomain.$domain" +short | awk '{print $4}' | head -n 1)
  destination=$(dig "$subdomain.$domain" +short | awk 'NR==2 {print $1}')

  # Print result
  echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Main Script
domain=$1
subdomain=$2

if [[ -z "$domain" ]]; then
  echo "Usage: $0 domain [subdomain]"
  exit 1
fi

if [[ -n "$subdomain" ]]; then
  # Display information for the specific subdomain
  get_subdomain_info "$domain" "$subdomain"
else
  # Display information for all predefined subdomains
  for sub in "www" "lb-01" "web-01" "web-02"; do
    get_subdomain_info "$domain" "$sub"
  done
fi
